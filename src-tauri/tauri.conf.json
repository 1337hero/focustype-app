{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FocusType",
  "version": "0.1.0",
  "identifier": "com.focustype.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FocusType",
        "width": 900,
        "height": 700,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "decorations": false,
        "resizable": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "A beautiful, minimal text editor",
    "longDescription": "FocusType is a distraction-free writing environment inspired by iA Writer and Typora."
  }
}
